page {
  background-color: #f7f7f7;
  --shadow-color: rgba(0, 0, 0, .15);
}
.background{
  width: 100%;
}
.inputFocus {
  position: absolute;
  transform: translateY(-100px);
  border-radius: 50px;
  box-shadow: 2px 2px 5px 1600px rgba(0, 0, 0, .2);
}
/* 主盒子 */
.row-box {
  /* width: 95vw; */
  min-height: 30rpx;
  margin: 0 auto;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px var(--shadow-color);
  margin-bottom: 20rpx;
}

/* 搜索栏 */
.search-box {
  position: absolute;
  top: 130rpx;
  width: 90vw;
  height: 80rpx;
  margin: 0 5vw;
  padding: 0;
  background-color: white;
  transition: .25s;
}
.search-placeholder {
  color: #ddd;
}
.search-box input {
  height: 70rpx;
  padding: 0 40px 0 .5em;
  color: #555;
}
.search-box .icon-sousuo {
  position: absolute;
  top: 0;
  right: 0;
  padding: 0 25rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  color: #888;
}

/* 搜索栏聚焦 */
.inputFocus {
  position: fixed;
  transform: translateY(-100rpx);
  border-radius: 50px;
  box-shadow: 2px 2px 5px 1600px rgba(0, 0, 0, .2);
}
.consulting-type {
  /* margin-top: 40rpx; */
  padding: 20rpx 0;
}
.consulting-type view {
  float: left;
  width: 50%;
  padding: 0 20px;
  text-align: center;
  line-height: 60rpx;
  color: #555;
  box-sizing: border-box;
  font-size: 40rpx;
  text-shadow: 1px 2px 1px var(--shadow-color);
  transition: 0.5s;
}
.consulting-type view text{
  margin-left: 20rpx;
}
.info-box .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 95%;
    margin: 0 10rpx;
    padding: 20rpx 10rpx;
    text-align: left;
    color: #888;
    font-weight: bold;
    border-bottom: 1px solid #eee;
}
.more {
  color: #ccc;
  font-weight: normal;
  text-shadow: none;
  font-size: 15px;
}
.more .icon-fangxiangyou {
  font-size: 15px;
  margin: -17rpx 0 0 10rpx;
}
.info-box{
  min-height: 30rpx;
  margin: 0 auto;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 2px 5px var(--shadow-color);
  margin-bottom: 20rpx;
}
.info-box .content{
  margin: 20rpx 20rpx;
}
.col-info{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.row-info{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 0rpx;
}
.big-image{
  width: 30%;
  border-radius: 10rpx;
  box-shadow: 3px 3px 13px 3px rgba(0,0,0,0.2) ;

}

.inline-box {
  display: inline-block;
  /* width: 25%; */
}

.medicine-box {
  display: inline-block;
  width: 25%;
  box-sizing: border-box;
}

/* 左右滑动框 */
.scroll-info{
  /* border-top: 2px solid rgb(239, 253, 240);
  border-bottom: 2px solid rgb(239, 253, 240); */

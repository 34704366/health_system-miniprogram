  margin-left: 25rpx;
}
.container .info .nickName{
  font-size: 20px;
  font-weight: 500;
  margin: 10rpx 30rpx;
}
.container .info .gender{
  font-size: 16px;
  font-weight: 400;
  margin: 10rpx 30rpx;
}
.container .info .icon{
  width: 30px;
  /* border-radius: %; */

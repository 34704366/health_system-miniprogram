/* pages/category/category.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
  padding: 0rpx 0rpx;
  margin: auto auto;
}
.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #f5f5f5;
  text-align: center;
}
.nav_left .nav_left_items{
  height: 120rpx;
  line-height: 120rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #dedede;
  font-size: 20px;
}
.nav_left .nav_left_items.active{
  background: #fff;
  border-left: green 5px solid;
}
.nav_right{
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 10px;
  background: #fff;
  box-sizing: border-box;
}
.nav_right .nav_right_items{
  float: left;
  width: 33.33%;
  height: 200rpx;
  text-align: center;
}
.nav_right .nav_right_items image{
  width: 80rpx;
  height: 100rpx;
}
.nav_right .nav_right_items text{
  display: block;
  margin-top: 5px;
  font-size: 15px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}